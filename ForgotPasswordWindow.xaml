<Window x:Class="QuanLyPassword_V1.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quên mật khẩu" Height="315" Width="400" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Nhập tên đăng nhập:" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBox Name="txtUsername" Margin="0,0,0,10"/>
        <Button Content="Tiếp tục" Click="BtnContinue_Click" Width="100" Margin="0,0,0,10"/>

        <StackPanel Name="panelRecovery" Visibility="Collapsed">
            <TextBlock Text="Nhập mã khôi phục do ứng dụng cấp:" Margin="0,10,0,5"/>
            <TextBox Name="txtRecoveryCode" Margin="0,0,0,10"/>
            <Button Content="Xác thực mã khôi phục" Click="BtnVerifyRecoveryCode_Click" Width="150"/>
        </StackPanel>

        <StackPanel Name="panelReset" Visibility="Collapsed" Margin="0,20,0,0">
            <TextBlock Text="Nhập mật khẩu mới:"/>
            <PasswordBox Name="pwdNewPassword" Margin="0,5,0,10"/>
            <TextBlock Text="Xác nhận mật khẩu mới:"/>
            <PasswordBox Name="pwdConfirmPassword" Margin="0,5,0,10"/>
            <Button Content="Đặt lại mật khẩu" Click="BtnResetPassword_Click" Width="150"/>
        </StackPanel>

        <TextBlock Name="txtMessage" Foreground="Red" Margin="0,15,0,0"/>
    </StackPanel>
</Window>
