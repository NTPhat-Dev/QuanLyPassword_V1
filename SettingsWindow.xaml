<Window x:Class="QuanLyPassword_V1.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cài đặt" Height="350" Width="350">
    <Grid Margin="10">
        <StackPanel>

            <CheckBox x:Name="chkEnableMfa" Content="Bật xác thực 2 bước (MFA)" Margin="0,10,0,10"/>

            <Grid Margin="0,5,0,0" Height="30">
                <PasswordBox x:Name="txtOldPassword" />
                <TextBlock Text="Mật khẩu cũ" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtOldPassword, Path=Password.Length}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=txtOldPassword, Path=Password.Length}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Grid Margin="0,5,0,0" Height="30">
                <PasswordBox x:Name="txtNewPassword" />
                <TextBlock Text="Mật khẩu mới" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtNewPassword, Path=Password.Length}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=txtNewPassword, Path=Password.Length}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Grid Margin="0,5,0,0" Height="30">
                <PasswordBox x:Name="txtConfirmPassword" />
                <TextBlock Text="Xác nhận mật khẩu mới" Foreground="Gray" IsHitTestVisible="False" Margin="5,0,0,0" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtConfirmPassword, Path=Password.Length}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=txtConfirmPassword, Path=Password.Length}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Content="Tạo mã khôi phục mới" Margin="0,15,0,0" Height="30" Click="BtnGenerateRecoveryCodes_Click"/>
            <Button Content="Lưu" Margin="0,15,0,0" Height="30" Click="BtnSave_Click" />

        </StackPanel>
    </Grid>
</Window>
