<Window x:Class="QuanLyPassword_V1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký" Height="280" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="/img/dakirby309_simply_styled_microsoft_security_essentials_256_qDp_icon.ico">
    <Grid Margin="15" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Tên đăng nhập:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" />
        <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Height="25" />

        <TextBlock Text="Mật khẩu:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,6,10,0" />
        <PasswordBox x:Name="pwdPassword" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,6,0,0" PasswordChanged="PwdPassword_PasswordChanged" />
        <TextBox x:Name="txtPasswordVisible" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,6,0,0" Visibility="Collapsed" TextChanged="TxtPasswordVisible_TextChanged" />

        <TextBlock Text="Xác nhận mật khẩu:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,6,10,0" />
        <PasswordBox x:Name="pwdConfirmPassword" Grid.Row="2" Grid.Column="1" Height="25" Margin="0,6,0,0" PasswordChanged="PwdConfirmPassword_PasswordChanged" />
        <TextBox x:Name="txtConfirmPasswordVisible" Grid.Row="2" Grid.Column="1" Height="25" Margin="0,6,0,0" Visibility="Collapsed" TextChanged="TxtConfirmPasswordVisible_TextChanged" />

        <TextBlock x:Name="txtMessage" Grid.Row="3" Grid.ColumnSpan="2" Foreground="Red" Margin="0,6,0,6" TextWrapping="Wrap" Visibility="Collapsed" />

        <CheckBox x:Name="chkShowPassword" Grid.Row="4" Grid.ColumnSpan="2" Content="Hiện mật khẩu" Margin="0,6,0,10"
                  Checked="ChkShowPassword_Checked" Unchecked="ChkShowPassword_Unchecked" />

        <Button x:Name="btnRegister" Content="Đăng ký" Grid.Row="5" Grid.ColumnSpan="2" Height="30" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="BtnRegister_Click" />

        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" Margin="0,10,0,0" HorizontalAlignment="Left" FontSize="12">
            <Run Text="Đã có tài khoản? " />
            <Hyperlink Click="LoginLink_Click" Foreground="Blue" Cursor="Hand" TextDecorations="Underline">
                Đăng nhập
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
